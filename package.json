{
  "name": "ai-rewind",
  "version": "1.0.0",
  "description": "AI change tracking and rollback system using shadow git repository",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "ai-rewind": "./dist/cli.js"
  },
  "scripts": {
    "dev": "bun run --watch src/cli.ts",
    "build": "node scripts/build.cjs",
    "build:bun": "bun build src/cli.ts --outdir dist --target node",
    "build:standalone": "bun build src/cli.ts --compile --outfile ai-rewind.exe",
    "postinstall": "node scripts/build.cjs",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "biome check .",
    "format": "biome format --write ."
  },
  "keywords": [
    "ai",
    "git",
    "tracking",
    "version-control",
    "rollback",
    "ai-rewind",
    "claude",
    "copilot",
    "shadow-git",
    "undo",
    "revert"
  ],
  "author": "hex4def6",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hex4def6/ai-rewind.git"
  },
  "bugs": {
    "url": "https://github.com/hex4def6/ai-rewind/issues"
  },
  "homepage": "https://github.com/hex4def6/ai-rewind#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "execa": "^8.0.1",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/bun": "^1.0.0",
    "@types/node": "^20.10.0",
    "bun-types": "^1.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}